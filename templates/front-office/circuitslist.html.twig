{# templates/circuitslist.html.twig #}

{% extends "baselayout.html.twig" %}

{% block title %}
{{ parent() }}
{% endblock %}

{% block body %}
<h1>Liste de circuits</h1>
{% if circuitslist is not empty %}

<div class="row">

	{# Loop through list and creeate the list of circuit items. #}
	{% for circuit in circuitslist %}
	{% set available = 0 %}
	{% for prog in circuit.programmations %}
	{% if date(prog.dateDepart) > date() %}
	{% set available = 1 %}
	{% endif %}
	{% endfor %}
	{% if available %}
	
	
<div class="col-sm-4">
			<a href="{{ path('circuitshow', { 'id' : circuit.id }) }}">
			<p class="lists">
				<img src="/images/flags/{{ circuit.paysDepart | lower }}.png"
				width=200px/>
			</br>
			{{ circuit.description }}
		</p>
		</a>
		</div>
	{% endif %}
	{% endfor %}
{% else %}
<p>Sorry, you don't have any circuits yet!</p>
{% endif %}


</div>
{% endblock %}
{# body #}
