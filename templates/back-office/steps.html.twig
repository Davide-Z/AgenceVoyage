{# templates/circuitslist.html.twig #}

{% extends "baselayout.html.twig" %}

{% block title %}{{ circuit.description }} - Steps{% endblock %}

{% block body %}
    <h1>List of steps</h1>
    {% if circuit.etapes is not empty %}
        <p>Here are all your steps:</p>
        <table>
     	 		<thead>
     					<tr>
     				    	<th>Ville</th>
     						  <th>Numéro</th>
     						  <th>Nombre de jours</th>
     					</tr>
     				</thead>
     				<tr>
     			   <td>{{ circuit.villeDepart }}</td>
     			   <td>/</td>
     			   <td>/</td>
     			</tr>
     		{%  for step in circuit.etapes %}
     			<tr>
     			   <td>{{ step.villeEtape }}</td>
     			   <td>{{ step.numeroEtape }}</td>
     			   <td>{{ step.nombreJours }}</td>
     			</tr>
     		{% endfor %}
     		     <tr>
     			   <td>{{ circuit.villeArrivee }}</td>
     			   <td>/</td>
     			   <td>/</td>
     			</tr>
     		</table>
    {% else %}
                <p>Here are all your steps:</p>
        <table>
     	 		<thead>
     					<tr>
     				    	<th>Ville</th>
     						  <th>Numéro</th>
     						  <th>Nombre de jours</th>
     					</tr>
     				</thead>
     			<tr>
     			   <td>{{ circuit.villeDepart }}</td>
     			   <td>/</td>
     			   <td>/</td>
     			</tr>
     		     <tr>
     			   <td>{{ circuit.villeArrivee }}</td>
     			   <td>/</td>
     			   <td>/</td>
     			</tr>
     		</table>
    {% endif %}

{% endblock %} {# body #}