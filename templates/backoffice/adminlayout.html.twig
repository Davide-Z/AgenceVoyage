{# templates/backoffice/adminlayout.html.twig #}

{% extends "baselayout.html.twig" %}

{% block title %}{{ parent() }} <div class="back" >Back Office</div>{% endblock %}

{% block menu %} 
<nav class="navbar navbar-inverse">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="#">HOEA</a>
				</div>
				<ul class="nav navbar-nav">
					<li><a href="{{  path('admin_circuitlist') }}">Circuits</a>
				</ul>


				<div class="btn-group pull-right" >
				<a class="btn btn-default" href="{{  path('home') }}" role="button">Visiteur</a>
				</div>
			</div>
		</nav>
    
	{# Display messages resulting from redirects after C(R)UD actions #}
    {% for message in app.session.flashbag.get('message') %}
        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            <p>{{ message }}</p>
        </div>
    {% endfor %}

{% endblock %}{# menu #}

{% block footer %}
{% endblock %}